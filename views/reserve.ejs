<!DOCTYPE html>
<html>
  <head>
    <% include ../views/partials/head %>
  </head>
  <body>
    <% include ../views/partials/nav %>
    
    <div class="container" id="reserve_container">

    <form class="form-horizontal" role="form" action="/reserve" method="post" >

    <div class="row">
    	<div class="col-lg-12">
    		<div class="page-header">
              <h1 >Reservation</h1>
            </div>

            <div>

            <h3 >Box Select</h3>
            
            <% boxes.forEach(function(box) { %>
            
            <div class="well" id="box_info">

            	#<%= box.box_id %><br>
            	<div class="form-group">
           		 <% if(box.using == 0){ %>
            	<img src="/images/unused_box.png" width="100px" height="100px">
            	<div class="radio">
            	<input type="radio" name="box" value="<%= box.box_id %>">
            	</div>
         		<% } else{ %>  
         		 <img src="/images/used_box.png" width="100px" height="100px">
         		 <div class="radio">
         		 <input type="radio" value="<%= box.box_id %>" name="box" disabled>
         		 </div>
         		 <% } %>
         		 </div>
         		 <br>
                
             </div>
          <% }) %>
          </div>
          <br>
          </div>
    	</div>

    	<div class="row">
    		<div class="col-lg-12">
            	<h3>Finish Time</h3>
            	<div class="form-group">
            		<input type="date" name="finish_date">
            	</div>
                <br>
            </div>
        </div>
         <div class="form-group">
            <button type="submit" class="btn btn-default">결제하기</button>
         </div>
      </form>
    </div>

  </body>
 <script>
 </script>
</html>
