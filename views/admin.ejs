<!DOCTYPE html>
<html>
  <head>
    <% include ../views/partials/head %>
  </head>
  <body>
    <% include ../views/partials/nav %>
    
    <div class="container" id="admin_container">

    <div class="row">
    	<div class="col-lg-12">
    		<div class="page-header">
              <h1 >Boxes State</h1>
            </div>
            
            <% boxes.forEach(function(box) { %>
            
            <div class="well" id="box_info">

            	Box ID : <%= box.box_id %><br>

           		 <% if(box.using == 0){ %>
            	<img src="/images/unused_box.png" width="100px" height="100px">
         		<% } else{ %>  
         		 <img src="/images/used_box.png" width="100px" height="100px">
         		 <% } %><br>
                
                User ID : <%= box.user_id %><br>
                LED(out) : <%= box.led_out %><br>
                LED(in) : <%= box.led_in %><br>
                Photosensor : <%= box.photosen %><br>
                Microswitch : <%= box.micros %><br>
                Lock : <%= box.lock %>

                <form method="get" action="/admin/<%= box._id %>">
      				<button type="submit" class="btn btn-default">lock</button>
   				</form>
             </div>
          <% }) %>
          </div>
    	</div>



    <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="tables">Usage Information</h1>
            </div>

            <div class="bs-component">
              <table class="table table-striped table-hover ">
                <thead>
                  <tr>
                    <th>#</th>
                   	<th>User</th>
           			<th>BoxID</th>
		            <th>Start Date</th>
		            <th>Finish Date</th>
		            <th>Price</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>1</td>
                    <td>Column content</td>
                    <td>Column content</td>
                    <td>Column content</td>
                    <td>Column content</td>
                    <td>Column content</td>
                  </tr>
                </tbody>
              </table> 
            </div><!-- /example -->
          </div>
        </div>
        </div>
  </body>
  <script>
  </script>
</html>
