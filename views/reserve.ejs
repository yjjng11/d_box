    <div class="box">
      <figure class="background">
        <video id="vid1" autoplay loop>
          <source src="images/background.mp4" type="video/mp4"/>
        </video>
      </figure>
    <form class="form-horizontal" role="form" action="/reserve" method="post" >
      <section class="title2">
          <p class="register2">RESERVATION</p>
        </section>
        <section class="title3">
          <p class="select">Box Select</p>
        </section>

        <section class="boxselect">
        <% boxes.forEach(function(box) { %>
          <section class="each" id="box_info">
            <p class="num">#<%= box.box_id %></p><br>
            <section class="group">
              <% if(box.using == 0){ %>
            <img src="/images/unused_box.png" width="100px" height="100px">
            <section class="radio">
            <input type="radio" name="box" value="<%= box.box_id %>">
            </section>
           <% } else{ %>  
            <img src="/images/used_box.png" width="100px" height="100px">
            <section class="radio">
            <input type="radio" value="<%= box.box_id %>" name="box" disabled>
            </section>
            <% } %>
          </section>
        </section>
        <% }) %>
      </section>

      <section class="title4">
        <p class="date">End Date</p>
      </section>
      <section class="group">
        <input type="date" name="finish_date" class="dateselect">
      </section>
      <button type="submit" class="pay">결제하기</button>
          </form>
